<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackFeatures"
        tools:targetApi="31">
        <activity
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".ui.theme.Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".TextFieldsSnackBars"
            android:exported="false"
            android:label="@string/title_activity_text_fields_snack_bars"
            android:theme="@style/Theme.JetpackFeatures" />
        <activity
            android:name=".ExternalStateChange"
            android:exported="false"
            android:label="@string/title_activity_external_state_change"
            android:theme="@style/Theme.JetpackFeatures" />
        <activity
            android:name=".InternalStateChange"
            android:exported="false"
            android:label="@string/title_activity_internal_state_change"
            android:theme="@style/Theme.JetpackFeatures" />
        <activity
            android:name=".SecondActivity"
            android:exported="false"
            android:label="@string/title_activity_second"
            android:theme="@style/Theme.JetpackFeatures" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="false"
            android:theme="@style/Theme.JetpackFeatures">
        </activity>
    </application>

</manifest>